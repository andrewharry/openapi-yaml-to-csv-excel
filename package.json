{
  "name": "openapi-yaml-to-csv-excel",
  "version": "1.0.0",
  "description": "CLI tool to convert OpenAPI yaml file to CSV/Excel file.",
  "main": "index.js",
  "bin": {
    "@horitaka/opapi-convert": "dist/index.js",
    "opapi-convert": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "dev": "ts-node src/index.ts",
    "lint": "eslint --fix '{src,tests}/**/*.{ts,js}'",
    "format": "prettier --write '{src,tests}/**/*.{ts,js}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/horitaka/openapi-yaml-to-csv-excel.git"
  },
  "keywords": [
    "openapi",
    "converter",
    "yaml",
    "csv",
    "excel"
  ],
  "author": "horitaka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/horitaka/openapi-yaml-to-csv-excel/issues"
  },
  "homepage": "https://github.com/horitaka/openapi-yaml-to-csv-excel#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "ts-node": "^10.9.1"
  }
}
